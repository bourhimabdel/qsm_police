<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_oui_non"
  >


  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/lte"
      android:layout_width="wrap_content"
      android:layout_height="160dp"


      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_speed="1"

      android:scaleX="1.2"
      android:scaleY="1.2"/>

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#DCDCDC"
      android:textSize="14sp"
      android:textStyle="bold"
      android:padding="15dp"
      android:gravity="center"
      android:text="الخروج"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/lte"
      app:layout_constraintStart_toStartOf="parent"
      />





  <Button
      android:id="@+id/btn_oui"
      android:layout_width="0dp"
      app:layout_constraintWidth_percent="0.5"
      android:layout_height="wrap_content"

      android:background="@drawable/btn_selector_next"
      android:gravity="center"
      android:textAllCaps="false"
      android:textSize="15sp"
      android:textStyle="bold"
      android:textColor="#DCDCDC"
      android:text="إمتحان آخر أكثر صعوبة"

      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/title"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@id/btn_non"

      android:layout_marginTop="25dp"
      android:layout_marginBottom="15dp"
      android:layout_marginStart="15dp"
      android:layout_marginLeft="15dp" />

  <Button
      android:id="@+id/btn_non"
      android:layout_width="0dp"
      app:layout_constraintWidth_percent="0.3"
      android:layout_height="wrap_content"


      android:background="@drawable/back_operation_en"


      app:layout_constraintStart_toEndOf="@id/btn_oui"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="@id/btn_oui"
      app:layout_constraintTop_toTopOf="@id/btn_oui"


      android:layout_marginStart="9dp"

      android:text="خروج"
      android:textColor="#DCDCDC"
      android:gravity="center"
      android:textSize="15sp"
      android:textAllCaps="false"

      android:layout_marginLeft="9dp" />


</androidx.constraintlayout.widget.ConstraintLayout>